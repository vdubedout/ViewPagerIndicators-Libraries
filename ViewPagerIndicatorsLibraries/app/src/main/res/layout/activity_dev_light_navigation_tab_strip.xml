<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_dev_light_navigation_tab_strip"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="eu.dubedout.vincent.viewpagerindicatorslibraries.components.devlightnavigationtabstripactivity.DevLightNavigationTabStripActivity">

    <TextView
    style="@style/pager_indicator_title"
    android:text="NavigationTabStrip default" />

    <LinearLayout style="@style/pager_container">

        <com.gigamole.navigationtabstrip.NavigationTabStrip
            android:id="@+id/activity_rubber_indicator_indicator_default"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            app:nts_active_color="#000"/>

        <android.support.v4.view.ViewPager
            android:id="@+id/activity_rubber_indicator_viewpager_default"
            android:layout_width="match_parent"
            android:layout_height="30dp" />
    </LinearLayout>

    <TextView
        style="@style/pager_indicator_title"
        android:text="NavigationTabStrip point" />

    <LinearLayout style="@style/pager_container">

        <com.gigamole.navigationtabstrip.NavigationTabStrip
            android:id="@+id/activity_rubber_indicator_indicator_point"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            app:nts_type="point"
            app:nts_active_color="#000"/>

        <android.support.v4.view.ViewPager
            android:id="@+id/activity_rubber_indicator_viewpager_point"
            android:layout_width="match_parent"
            android:layout_height="30dp" />
    </LinearLayout>


    <TextView
        style="@style/pager_indicator_title"
        android:text="NavigationTabStrip themed" />

    <LinearLayout style="@style/pager_container">

        <com.gigamole.navigationtabstrip.NavigationTabStrip
            android:id="@+id/activity_rubber_indicator_indicator_themed"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            app:nts_type="line"
            app:nts_color="#000"
            app:nts_size="15sp"
            app:nts_weight="3dp"
            app:nts_factor="2.5"
            app:nts_gravity="top"
            app:nts_corners_radius="1.5dp"
            app:nts_animation_duration="300"
            app:nts_active_color="#000"
            app:nts_inactive_color="#c4c4c4"

            />

        <android.support.v4.view.ViewPager
            android:id="@+id/activity_rubber_indicator_viewpager_themed"
            android:layout_width="match_parent"
            android:layout_height="30dp" />
    </LinearLayout>


</LinearLayout>
