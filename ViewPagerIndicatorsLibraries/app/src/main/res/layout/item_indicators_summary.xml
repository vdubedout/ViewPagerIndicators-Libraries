<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="@dimen/activity_vertical_margin">

    <ImageView
        android:id="@+id/item_indicators_summary_image_star"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        app:srcCompat="@drawable/ic_star_border_black_24dp"
        android:tint="@color/colorAccent"
        android:layout_margin="5dp"/>

    <TextView
        android:id="@+id/item_indicators_summary_star_number"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:paddingTop="2dp"
        android:gravity="center_vertical"
        android:layout_toLeftOf="@id/item_indicators_summary_image_star"
        android:layout_toStartOf="@id/item_indicators_summary_image_star"
        android:layout_alignTop="@id/item_indicators_summary_image_star"
        android:layout_alignBottom="@id/item_indicators_summary_image_star"
        android:textStyle="bold"
        tools:text="8000"/>

    <TextView
        android:id="@+id/item_indicators_summary_library_name"
        android:layout_toLeftOf="@id/item_indicators_summary_star_number"
        android:layout_toStartOf="@id/item_indicators_summary_star_number"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignBaseline="@id/item_indicators_summary_star_number"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        tools:text="ViewPagerIndicator"/>

    <TextView
        android:id="@+id/item_indicators_summary_last_update"
        android:layout_below="@id/item_indicators_summary_library_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        tools:text="Last update: 4 years"/>

    <TextView
        android:id="@+id/item_indicators_summary_active_issues"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_toLeftOf="@id/item_indicators_summary_last_update"
        android:layout_toStartOf="@id/item_indicators_summary_last_update"
        tools:text="Active Issues: 127"
        android:layout_alignBaseline="@id/item_indicators_summary_last_update"/>

    <TextView
        android:id="@+id/item_indicators_summary_pull_requests"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/item_indicators_summary_active_issues"
        android:layout_marginTop="3dp"
        tools:text="Active Pull Requests: 110"
        />


</RelativeLayout>